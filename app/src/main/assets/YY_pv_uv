<script type="text/javascript">

    var myChart = echarts.init(document.getElementById('main'), 'myTheme');

    option = {
    title: {
        show:true,
        text: 'Weekly plants data',
        textStyle: {
            fontSize: 12,
            fontWeight: 'bolder',
            color: '#FFFFFF'
        },
        x: '5',
        y: '5'
    },
    grid: {
        x: 40,
        y: 40,
        x2: 20,
        y2: 45,
    },
    tooltip: {
        trigger: 'axis'
    },
    xAxis: {
        type: 'category',
        data: ['4.19','4.20','4.21','4.22','4.23','4.24','4.25']
    },
    yAxis: {
        type: 'value'
    },
    legend: {
        data:['pv','uv'],
        x: 'center',
        y: 'bottom',
        itemHeight: 8,
    },
    series:
    [
    {
        name: 'plants1',
        data: [2800, 2700, 2150, 3912, 1999, 3120, 4122],
        type: 'bar'
    },
    {
        name: 'plants2',
        data: [2400, 2300, 1890, 1900, 1800, 2230, 2006],
        type: 'bar'
    }
    ]
    };

    myChart.setOption(option);

</script>
